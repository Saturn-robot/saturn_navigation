<launch>
  <!-- 3dsensor: TURTLEBOT_3D_SENSOR should be set to "astra" -->
  <arg name="3dsensor" default="$(optenv TURTLEBOT_3D_SENSOR astra)"/>

  <!-- launch the 3d sensor -->
  <include file="$(find saturn_bringup)/launch/astra_sensor.launch">
    <!-- arg name="rgb_processing" value="false" />
    <arg name="depth_registration" value="false" />
    <arg name="depth_processing" value="false" / -->
    
    <!-- We must specify an absolute topic name because if not it will be prefixed by "$(arg camera)".
         Probably is a bug in the nodelet manager: https://github.com/ros/nodelet_core/issues/7 --> 
    <!-- arg name="scan_topic" value="/scan" / -->
  </include>

  <!-- Gmapping -->
  <arg name="custom_gmapping_launch_file" default="$(find saturn_navigation)/launch/includes/gmapping/$(arg 3dsensor)_gmapping.launch.xml"/>
  <include file="$(arg custom_gmapping_launch_file)"/>

  <!-- Move base -->
  <!-- include file="$(find saturn_navigation)/launch/includes/move_base.launch.xml"/ -->
</launch>
